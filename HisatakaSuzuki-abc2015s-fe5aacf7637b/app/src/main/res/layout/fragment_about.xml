<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.android_group.student.abc2015summer.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アプリ名"
            android:layout_centerHorizontal="true"
            android:id="@+id/nameTitle"
            android:textColor="@color/basic_test_color_black"
            android:layout_marginTop="@dimen/small_padding"
            android:textSize="@dimen/headline_text_size"
            android:typeface="monospace"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Bazaar and Conference Summer 2015"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/nameTitle"
            android:id="@+id/name1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公式カンファレンスアプリ"
            android:id="@+id/name2"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/name1"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開発メンバー"
            android:id="@+id/developMember"
            android:textColor="@color/basic_test_color_black"
            android:layout_marginTop="@dimen/big_padding"
            android:layout_below="@+id/name2"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/headline_text_size"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜エンジニア＞"
            android:id="@+id/engineer"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/developMember"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/mikami"
            android:layout_below="@+id/engineer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageMikami"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三上哲郎"
                    android:id="@+id/mikamiText"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（就職活動中）"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_below="@+id/mikamiText"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hikawa"
            android:layout_below="@+id/mikami"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageHikawa"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="樋川薫平"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/watanabe"
            android:layout_below="@+id/hikawa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageWatanabe"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渡辺悠"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/suzumura"
            android:layout_below="@+id/watanabe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSuzumura"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鈴村伸一郎"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hamanaka"
            android:layout_below="@+id/suzumura"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageHamanaka"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="濱中真太郎"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜デザイナー＞"
            android:id="@+id/designer"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/hamanaka"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/suzukiK"
            android:layout_below="@+id/designer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSuzukiK"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鈴木佳連"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜テクニカルアドバイザー＞"
            android:id="@+id/technical"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/suzukiK"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/konishi"
            android:layout_below="@+id/technical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageKonishi"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小西達也"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜マネージャー＞"
            android:id="@+id/manager"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/konishi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/suzukiH"
            android:layout_below="@+id/manager"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSuzukiH"
                android:layout_marginLeft="@dimen/imageView_padding"
                android:background="@drawable/background_circle_pink"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鈴木久貴"
                    android:textColor="@color/basic_test_color_black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開発・公開"
            android:id="@+id/developPublic"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/suzukiH"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/big_padding"
            android:textSize="@dimen/headline_text_size"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日本アンドロイドの会 学生部"
            android:id="@+id/japanAndroid"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/developPublic"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入部歓迎（入部はこちらから）"
            android:id="@+id/join"
            android:textColor="@color/basic_test_color_black"
            android:layout_below="@+id/japanAndroid"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/last_padding"
            android:autoLink="web"/>

    </RelativeLayout>
</ScrollView>