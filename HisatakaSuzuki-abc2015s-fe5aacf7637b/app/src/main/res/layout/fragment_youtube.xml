<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/sub_color"
        app:tabTextColor="@color/primary_text_disabled_material_light"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:tabSelectedTextColor="@color/primary_text_default_material_light"
        app:tabIndicatorColor="@color/selected"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout"/>

</RelativeLayout>