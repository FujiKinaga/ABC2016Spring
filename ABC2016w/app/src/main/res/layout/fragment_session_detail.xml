<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.android_group.student.abc2015summer.SessionDetailFragment">

    <RelativeLayout
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@color/background_material_light"
            android:id="@+id/btn_favorite"
            android:src="@drawable/star_pink"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/blue"
            android:id="@+id/time"
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/btn_favorite"
            android:layout_below="@id/time"
            android:textSize="18sp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/title"
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/title"
            android:textSize="18sp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:id="@+id/room"
            android:textColor="@color/black"
            android:text="location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/divider_below_room"
            android:layout_below="@id/room"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_below="@id/divider_below_room"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/content"
            android:text="abst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="16sp"
            android:id="@+id/url"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="URL"/>

        <View
            android:layout_below="@id/url"
            android:id="@+id/divider_below_content"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_below="@id/divider_below_content"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:paddingRight="6dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/group"
            android:text="group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>